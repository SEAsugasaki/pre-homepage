<!-- ステップ3：待ち時間・売り切れ情報 -->
<section>
  <h2>待ち時間・売り切れ情報</h2>
  <table id="status-table" border="1" style="width:100%; text-align:center;">
    <thead>
      <tr>
        <th>店舗名</th>
        <th>待ち時間</th>
        <th>売り切れ状況</th>
      </tr>
    </thead>
    <tbody>
      <tr><td colspan="3">読み込み中...</td></tr>
    </tbody>
  </table>
</section>

<script>
  // あなたのGoogleスプレッドシートの情報に置き換えてください
  const sheetID = 'https://docs.google.com/spreadsheets/d/1vy3jDk97KIhgu91R3eisSzObNkvSy9uNyq_pJRjeBtE/edit';
  const sheetName = 'シート1'; // デフォルトのシート名

  const url = `https://opensheet.elk.sh/${sheetID}/${sheetName}`;

  fetch(url)
    .then(res => res.json())
    .then(data => {
      const tbody = document.querySelector("#status-table tbody");
      tbody.innerHTML = "";
      data.forEach(row => {
        const tr = document.createElement("tr");
        tr.innerHTML = `
          <td>${row['店舗名']}</td>
          <td>${row['待ち時間']}</td>
          <td>${row['売り切れ状況']}</td>
        `;
        tbody.appendChild(tr);
      });
    })
    .catch(err => {
      document.querySelector("#status-table tbody").innerHTML = "<tr><td colspan='3'>読み込みエラー</td></tr>";
    });
</script>

<script>
  // ルートのデータ：画像ファイル名と説明
  const routes = {
    "1-3": [
      { image: "step1.jpg", text: "左に曲がります" },
      { image: "step2.jpg", text: "階段を上ります" },
      { image: "step3.jpg", text: "1年展示教室に到着です" },
    ],
    "1-4": [
      { image: "step1.jpg", text: "まっすぐ進みます" },
      { image: "step4.jpg", text: "体育館に到着です" },
    ],
    "2-4": [
      { image: "step5.jpg", text: "右の廊下を進みます" },
      { image: "step6.jpg", text: "体育館に到着です" },
    ]
    // 他のルートも追加可能
  };

  function showRoute() {
    const from = document.getElementById("from").value;
    const to = document.getElementById("to").value;
    const key = `${from}-${to}`;
    const steps = routes[key];

    const display = document.getElementById("steps");
    display.innerHTML = "";

    if (!steps) {
      display.innerHTML = "<p>このルートは登録されていません。</p>";
      return;
    }

    steps.forEach((step, index) => {
      const div = document.createElement("div");
      div.className = "step";
      div.innerHTML = `
        <img src="${step.image}" alt="ステップ${index + 1}">
        <p>${index + 1}. ${step.text}</p>
      `;
      display.appendChild(div);
    });
  }
</script>
